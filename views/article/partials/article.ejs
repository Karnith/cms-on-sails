<div class='blog-post'>
  <h2 class='blog-post-title'><a href="/article/show/<%= article.id %>"><%= article.title %></a></h2>
  <p class="blog-post-meta">published <%= article.published_at() %></p>
  <p><%- article.bodyHTML() %></p>
  <% if(req.session.authenticated){ %>
  <small><a href="/article/<%= article.id %>/edit">Edit Article</a></small>
  <% } %>
</div>

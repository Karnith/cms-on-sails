<form action="<%= action %>" method="<%= method %>">
  <%
    if (typeof(article) === 'undefined'){
      article = {
        title: '',
        body: ''
      }
    }
  %>

  <div class='form-group'>
    <input name='title' value='<%= article.title %>' placeholder='Title' type='text' class='form-control' autofocus>
  </div>
  <div class='form-group'>
    <div id='epiceditor'></div>
    <textarea name='body' placeholder='Body' type='text' rows='5' class='form-control' id='markdown_field'><%= article.body %></textarea>
  </div>

  <br>
  <div class='control-group'>
    <input type='submit' value='Publish Article' class='btn btn-lg'>
  </div>
  <div class='control-group'>
    <!-- hidden inputs -->
    <input type='hidden' name='_csrf' value='<%= _csrf %>'>
  </div>
</form>
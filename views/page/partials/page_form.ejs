<form action="<%= action %>" method="<%= method %>">
  <%
    if (typeof(page) === 'undefined'){
      page = {
        title: '',
        body: '',
        markup: 'html'
      }
      console.log('no page')
    }
  %>

  <div class='form-group'>
    <!-- radio buttons for markdown or html -->
    <div class="radio-inline">
      <label>
        <input type="radio" name="markup" id="optionsRadios1" value="markdown" <%= page.markup === 'markdown' ? "checked" : "" %>>
        Markdown + HTML
      </label>
    </div>
    <div class="radio-inline">
      <label>
        <input type="radio" name="markup" id="optionsRadios2" value="html" <%= page.markup === 'html' ? "checked" : "" %>>
        Only HTML
      </label>
    </div>
  </div>
  <div class='form-group'>
    <input name='title' value='<%= page.title %>' placeholder='Title' type='text' class='form-control' autofocus>
  </div>
  <div class='form-group'>
    <!-- <div id='epiceditor'></div> -->
    <%- partial('ghost_editor', {textarea_name: 'content', textarea_value: page.content}) %>
  </div>

  <br>
  <div class='control-group'>
    <input type='submit' value='Publish Page' class='btn btn-lg'>
  </div>
  <div class='control-group'>
    <!-- hidden inputs -->
    <input type='hidden' name='_csrf' value='<%= _csrf %>'>
  </div>
</form>